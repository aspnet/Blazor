@using System.Collections.Generic

Type here: <input onkeypress=@OnKeyPressed />
<ul>
    @foreach (var key in keysPressed)
    {
        <li>@key</li>
    }
</ul>

@functions {
    List<string> keysPressed = new List<string>();

    void OnKeyPressed(UIKeyboardEventArgs eventArgs)
    {
        keysPressed.Add($"Key: {eventArgs.Key}, Code: {eventArgs.Code}, CtrlKey: {eventArgs.CtrlKey}, ShiftKey: {eventArgs.ShiftKey}, AltKey: {eventArgs.AltKey}, MetaKey: {eventArgs.MetaKey}, Repeat: {eventArgs.Repeat}, IsComposing: {eventArgs.IsComposing}");
    }
}
